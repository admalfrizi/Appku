<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".ui.screen.home.HomeScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:background="@color/light_blue"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="25dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="@dimen/_25sdp"
                android:layout_marginRight="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_inisial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/third"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_25sdp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/image_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/gambar_profile" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hi"
                        android:textColor="@color/third"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/third"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="18sp"/>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/punya_masalah_hidup_silahkan_konsultasikan_disini"
                    android:textColor="@color/enter"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="18sp"/>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_marginTop="31dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="21dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/background_home">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="69dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_group"
                        android:background="@drawable/group_btn"
                        android:padding="15dp"/>

                    <TextView

                        android:layout_marginTop="8dp"
                        android:layout_width="62dp"
                        android:layout_height="wrap_content"
                        android:text="Group Konsultasi"
                        android:textAlignment="center"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="69dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="39dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_life"
                        android:background="@drawable/life_btn"
                        android:padding="15dp"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Belajar Kehidupan"
                        android:fontFamily="@font/inter_semibold"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="69dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_doctor"
                        android:background="@drawable/terapi_btn"
                        android:padding="15dp"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terapi Mindset"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/inter_semibold"
                        android:gravity="center_horizontal"/>

                </LinearLayout>

            </LinearLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pemberitahuan"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/third"

                />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/group_notif_btn">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17.59dp"
                        android:layout_marginEnd="15.39dp"
                        android:layout_marginVertical="22dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="17.59dp"
                        android:layout_marginRight="15.39dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_group_notif"
                            android:layout_marginBottom="16.79dp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grup"
                            android:fontFamily="@font/inter_semibold"
                            android:textColor="@color/white"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8.88dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lihat Lebih Lanjut"
                                android:textSize="10sp"
                                android:fontFamily="@font/inter_medium"
                                android:textColor="@color/white"
                                />

                            <ImageView
                                android:layout_marginStart="7.99dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_caret_right"
                                android:layout_marginLeft="7.99dp" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="21dp"
                    android:background="@drawable/notif_btn"
                    android:layout_marginLeft="21dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17.59dp"
                        android:layout_marginEnd="15.39dp"
                        android:layout_marginVertical="22dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="17.59dp"
                        android:layout_marginRight="15.39dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_notif"
                            android:layout_marginBottom="26.18dp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Peringatan"
                            android:textSize="14sp"
                            android:fontFamily="@font/inter_semibold"
                            android:textColor="@color/white"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8.35dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lihat Lebih Lanjut"
                                android:textSize="10sp"
                                android:fontFamily="@font/inter_medium"
                                android:textColor="@color/white"
                                />

                            <ImageView
                                android:layout_marginStart="7.99dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_caret_right"
                                android:layout_marginLeft="7.99dp" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ayo_ikutan_webinar"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/third"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/webinar_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lihat_semua"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/third"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/webinar_rv"
            android:layout_width="wrap_content"
            android:layout_height="112dp"
            android:layout_marginTop="19dp"
            tools:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/tile_layout"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            android:text="@string/ada_kelas_baru_nih"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/third" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="17dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/mlType_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:checkedChip="@+id/main_course_chip"
                    android:paddingStart="23dp"
                    app:selectionRequired="true"
                    app:singleLine="true"
                    app:singleSelection="true"
                    android:paddingLeft="23dp">

                    <com.google.android.material.chip.Chip
                        style="@style/CustomChipStyle"
                        android:checkable="true"
                        android:id="@+id/main_course_chip"
                        android:layout_width="101dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Kehidupan"
                        android:gravity="center_horizontal" />

                    <com.google.android.material.chip.Chip
                        style="@style/CustomChipStyle"
                        android:checkable="true"
                        android:layout_width="101dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/main_course"
                        android:gravity="center_horizontal" />

                    <com.google.android.material.chip.Chip
                        style="@style/CustomChipStyle"
                        android:checkable="true"
                        android:layout_width="101dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/sosial"
                        android:gravity="center_horizontal" />

                </com.google.android.material.chip.ChipGroup>


            </LinearLayout>


        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/class_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/class_layout"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/berita_terbaru"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/third"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/news_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lihat_semua"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/third"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </LinearLayout>



</ScrollView>