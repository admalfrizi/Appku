<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MVVMLoginRetrofit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="colorControlNormal">@color/third</item>
        <item name="android:statusBarColor">@color/light_blue</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_bg_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:textAppearance">@style/chipTextAppearance</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/chip_text_color</item>
        <item name="chipCornerRadius">9dp</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="chipTextAppearance" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>


    <style name="textActive">
        <item name="android:textColor">@color/selected</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textInActive">
        <item name="android:textColor">@color/unselected</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DetailsActivityStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/third</item>
    </style>

</resources>